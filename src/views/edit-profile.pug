extends layout 

block content 
  form(action="", method="post") 
    input(type="text" required name="name" placeholder="Name" value=loggedInUser.name)
    input(type="email" required name="email" placeholder="Email" value=loggedInUser.email)
    input(type="text" required name="username" placeholder="Username" value=loggedInUser.username)
    input(type="text" required name="location" placeholder="Location" value=loggedInUser.location)
    input(type="submit", value="Update Profile")
