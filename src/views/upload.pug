extends templates/layout.pug 
include mixins/video.pug

block content 
  div 
    video#preview
    button#startBtn Start Recording
  if errorMessage 
    span Error Message : #{errorMessage}
  form(action="", method="post" enctype="multipart/form-data").edit-profile__form
    label(for="video") Video File 
    input(type="file", name="video" accept="video/*" required id="video") 
    input(type="text" placeholder="Title" name="title" required)
    input(type="text" placeholder="Description" name="description" required)
    input(type="text" placeholder="Hashtags, separated by comma." name="hashtags" required)
    input(type="submit" value="Upload Video")
  block scripts 
    script(src="/static/js/recorder.js")