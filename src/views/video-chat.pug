extends templates/layout

block content 
  h1 #{pageTitle}
  div#videoChatWelcome
    form(action="" method="post")
      input(type="text" placeholder="Room Name", required)
      input(type="submit", value="Enter Room")
  div#videoChatCall
    div#myStream
      video#myFace(autoplay playsinline width="400" height="400")
      button#mute
        i.fas.fa-volume-up
      select#audios(name="")      
      button#camera
        i.fas.fa-play
      select#cameras(name="") 
      video#peerFace(autoplay playsinline width="400" height="400")
      div#videoChatRoom
        h3 
        ul 
        form(action="" method="post")#roomMessage
          input(type="text" placeholder="Wirte message ..." required)
          input(type="submit" value="Send")

block scripts 
  script(src="/socket.io/socket.io.js")
  script(src="/static/js/videoChating.js")